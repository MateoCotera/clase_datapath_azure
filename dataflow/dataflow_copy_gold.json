{
	"name": "dataflow_copy_gold",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_parquet_silver_input",
						"type": "DatasetReference"
					},
					"name": "parquetsilver"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_parquet_gold",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "filterfecha"
				},
				{
					"name": "aggpromedio"
				}
			],
			"scriptLines": [
				"source(output(",
				"          SalesOrderNumber as string,",
				"          SalesOrderLineNumber as integer,",
				"          OrderDate as date,",
				"          CustomerName as string,",
				"          EmailAddress as string,",
				"          Item as string,",
				"          Quantity as integer,",
				"          UnitPrice as double,",
				"          TaxAmount as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> parquetsilver",
				"parquetsilver filter(OrderDate >= toDate('2021-11-01', 'yyyy-MM-dd')) ~> filterfecha",
				"filterfecha aggregate(groupBy(SalesOrderNumber,",
				"          OrderDate),",
				"     Promedio = avg(TaxAmount)) ~> aggpromedio",
				"aggpromedio sink(allowSchemaDrift: true,",
				"     validateSchema: true,",
				"     format: 'parquet',",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}